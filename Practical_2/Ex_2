// Position of a moving body

#include <iostream>
#include <cmath>
using namespace std;

// Declaration of function
int moving_function (int, int, int, int, int);

int moving_function (int x, int v, int a, int t, int r)
{
    int d;
    for (int i=0; i<=r; i=i+t)
        int d = x + v * i + 1/2*a*(i*i);
        return d;
}

int main ()
{
    int x, v, a, t, r;
    
    cout << "enter initial position, speed, acceleration";
    cin >> x >> v >> a;
    cout << "how many times you display the position?"<< endl;
    cin >> r;
    cout << "how often you want an update of position?";
    cin >> t;

    moving_function(x,v,a,t,r);
return 0;
}