// Function that reads in n integers and store them in the array a
void read_int_vector(int a [], int n){ 
  for(int i=0;i<n;i++){
    cout << i+1 << ".␣numero:␣";
    cin >> a[i]; 
  }
}

// function that prints and array v of integers of size l
void print_int_vector(int v [], int l ){
  cout << "Vector␣of␣integers␣is:␣" << endl << "{"; 
  for(int i1=0;i1<l−1;i1++)
    cout << v[i1] << ",␣";
  cout << v[l−1]<< "}" << endl << endl;
}